<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jan.drva.MainActivity">

    <TextView
        android:id="@+id/textViewNumberOfLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Broj trupaca"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Unesi broj"
        android:id="@+id/editTextNumberOfLogs"
        android:inputType="number"
        android:layout_above="@+id/listViewLogs"
        android:layout_toRightOf="@+id/textViewNumberOfLogs"
        android:layout_toEndOf="@+id/textViewNumberOfLogs"/>

    <ListView
        android:id="@+id/listViewLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNumberOfLogs"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Izracunaj"
        android:id="@+id/buttonCalculate"
        android:layout_below="@+id/listViewLogs"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
